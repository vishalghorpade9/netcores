@model Machines;

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    var className = "";
    if (Model.MachineStatus == 0)
    {
        className = "machine-idle";
    }
    else if (Model.MachineStatus == 1)
    {
        className = "machine-success";
    }
    else if (Model.MachineStatus == 2)
    {
        className = "machine-error";
    }
}

<div id="machine_id_@Model.MachineId" class="col-lg-3 col-xs-6 mb-4">
    <!-- small box -->
    <div class="small-box bg-aqua px-4 @className">
        <div class="inner">
            <p>@Model.MachineName</p>

            @* <p>@Model.MachineStatus</p> *@
        </div>
        @* <div class="icon">
            <i class="ion ion-bag"></i>
        </div>
        <a href="#" class="small-box-footer">@DateTime.Now <i class="fa fa-arrow-circle-right"></i></a> *@
    </div>
</div>
